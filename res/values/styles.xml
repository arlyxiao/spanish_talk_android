<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="head_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#222222</item>
    </style>

    <style name="head_bar_button">
        <item name="android:background">@drawable/bg_button_head_bar</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="head_bar_button_go_back_register" parent="@style/head_bar_button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/button_go_back</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>
    
    <style name="head_bar_button_logout" parent="@style/head_bar_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">@string/button_logout</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>

    <style name="general_layout_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#222222</item>
    </style>
    
    
    <style name="login_layout_inputer">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_input_background</item>
    </style>
    
    <style name="login_layout_button" parent="@style/login_layout_inputer">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>