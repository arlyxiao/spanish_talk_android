<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/body" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/head_bar" >

        <Button
            android:id="@+id/button1"
            style="@style/head_bar_button_go_back_register"
            android:onClick="clickGoBack" />

        <Button
            android:id="@+id/answer_btn"
            style="@style/head_bar_button_logout"
            android:onClick="showAnswer"
            android:text="@string/click_answer_button" />
    </RelativeLayout>

    <LinearLayout
        style="@style/padding_10_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/q_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:text="Title"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/q_created_at"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:text="Time" />

        <TextView
            android:id="@+id/q_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_data" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answer_box"
        style="@style/padding_10_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            style="@style/padding_10_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/q_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <EditText
                android:id="@+id/answer_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/answer_content"
                android:inputType="textMultiLine"
                android:minHeight="100dip" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/confirm_btn"
                style="@style/head_bar_button_go_back_register"
                android:onClick="doAnswer"
                android:text="@string/confirm_btn" />

            <Button
                android:id="@+id/cancel_btn"
                style="@style/head_bar_button_logout"
                android:onClick="cancelAnswer"
                android:text="@string/cancel_btn" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>